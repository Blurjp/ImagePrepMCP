{
  "version": 2,
  "buildCommand": "cd figma-smart-image-mcp && npm install && npm run build",
  "outputDirectory": "figma-smart-image-mcp/dist",
  "builds": [
    {
      "src": "figma-smart-image-mcp/dist/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/mcp",
      "dest": "figma-smart-image-mcp/dist/server.js"
    },
    {
      "src": "/message",
      "dest": "figma-smart-image-mcp/dist/server.js"
    },
    {
      "src": "/auth",
      "dest": "figma-smart-image-mcp/dist/server.js"
    },
    {
      "src": "/health",
      "dest": "figma-smart-image-mcp/dist/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "figma-smart-image-mcp/dist/server.js"
    }
  ]
}
